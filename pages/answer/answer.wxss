/**answer.wxss**/
.container {
    padding: 0;
    font-size: 14rpx;
    background: #ffffff;
    color: #000;
    padding-bottom: 100rpx; /* Space for footer */
}

/* Header */
.answer-header {
    padding: 30rpx 40rpx;
    background: #fff;
    border-bottom: 1rpx solid #f6f6f6;
}
.answer-title {
    font-size: 44rpx; /* Larger title */
    font-weight: bold;
    color: #121212;
    line-height: 1.4;
    display: block;
    margin-bottom: 15rpx;
}
.answer-meta {
    font-size: 26rpx;
    color: #8590a6;
}

/* Author Section */
.answerer-wrp {
    padding: 30rpx 40rpx;
    background: #fff;
}
.answerer {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.answerer .avatar image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.answerer-info {
    display: flex;
    flex-direction: column;
}
.answerer-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #121212;
}
.answerer-tagline {
    font-size: 26rpx;
    color: #444;
    display: none; /* Hidden based on screenshot focus, optional */
}
.answerer-agreed {
    font-size: 24rpx;
    color: #8590a6;
    margin-top: 5rpx;
}

/* Content */
.answer-content {
    padding: 0 40rpx 40rpx;
    background: #ffffff;
    font-size: 34rpx; /* Better reading size */
    color: #121212;
    line-height: 1.8;
}
.answer-content image {
    width: 100%;
    margin: 20rpx 0;
    border-radius: 8rpx;
}

/* Footer */
.answer-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: #ffffff;
    border-top: 1rpx solid #ebebeb;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    z-index: 100;
}

.vote-pill {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    background: #e3f2fd; /* Light blue */
    border-radius: 6rpx;
    height: 70rpx;
    color: #0066ff;
    margin-right: 30rpx;
}
.vote-up {
    padding: 0 20rpx;
    display: flex;
    align-items: center;
    border-right: 1rpx solid rgba(0, 102, 255, 0.1);
}
.vote-count {
    margin-left: 10rpx;
    font-size: 28rpx;
    font-weight: bold;
}
.vote-down {
    padding: 0 15rpx;
}
.triangle-up, .triangle-down {
    font-size: 20rpx;
}

.operation-wrp {
    flex: 1;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.operation-btn {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.operation-btn image {
    width: 45rpx;
    height: 45rpx;
}
.operation-btn text {
    position: absolute;
    top: -10rpx;
    right: -15rpx;
    font-size: 20rpx;
    background: #fff;
    color: #8590a6;
    padding: 2rpx 6rpx;
}

/* Floating Button */
.floating-next {
    position: fixed;
    bottom: 180rpx;
    right: 30rpx;
    background: #fff;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 20rpx;
    color: #8590a6;
    z-index: 90;
    border: 1rpx solid #eee;
}

