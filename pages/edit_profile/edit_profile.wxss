.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: white;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip {
  font-size: 24rpx;
  color: #888;
}

.input-section {
  margin-bottom: 60rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
}

.label {
  width: 100rpx;
  font-size: 32rpx;
  color: #333;
}

.nickname-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.btn-area {
  padding: 0 20rpx;
}

.submit-btn {
  background-color: #2A8CE5 !important;
  color: #fff;
  border-radius: 12rpx;
  font-weight: 500;
}
