<!--question.wxml-->
<view class="container">
    <view class="question-header" wx:if="{{question}}">
        <!-- 标题 -->
        <view class="q-title">
            {{question.title}}
        </view>

        <!-- 媒体/图片展示 (Placeholder) -->
        <view class="q-media-scroll">
            <scroll-view scroll-x="true" style="white-space: nowrap; display: flex;">
                <view style="display: inline-block; width: 220rpx; height: 150rpx; background: #000; margin-right: 10rpx; border-radius: 8rpx; position: relative;">
                   <image src="../../images/play.png" style="width: 60rpx; height: 60rpx; position: absolute; top:45rpx; left:80rpx; opacity: 0.8;"></image>
                </view> <!-- Video Placeholder -->
                 <view style="display: inline-block; width: 220rpx; height: 150rpx; background: #eee; margin-right: 10rpx; border-radius: 8rpx;"></view>
                 <view style="display: inline-block; width: 220rpx; height: 150rpx; background: #ddd; margin-right: 10rpx; border-radius: 8rpx;"></view>
            </scroll-view>
        </view>

        <!-- 标签/描述 (Collapsed) -->
        <view class="q-desc-collapse">
            <text>[视频] 针对“约谈”传言网友反映不一... 北京市西城区文旅局：具体回复要...  </text>
            <text style="color: #8590a6;">展开问题描述 ⌄</text>
        </view>

        <!-- 关注信息与写回答 -->
        <view class="q-actions-bar">
            <view class="q-stats">
                <text>{{question.follow_count || 177}} 人关注 · {{question.view_count || '21.26 万'}} 浏览</text>
            </view>
            <view class="q-btn-write" bindtap="writeAnswer">
                <image src="../../images/write.png" style="width: 28rpx; height: 28rpx; margin-right: 8rpx; filter: brightness(0) invert(1);"></image>
                <text>写回答</text>
            </view>
        </view>
    </view>

    <!-- 列表头: 回答数与排序 -->
    <view class="list-header" wx:if="{{question}}">
        <view class="list-title">回答 {{question.answer_count || 94}}</view>
        <view class="list-sort">切换至热门 ⇄</view>
    </view>
    
    <!-- 加载中 -->
    <view class="loading" wx:if="{{!question}}">
        <text>加载中...</text>
    </view>
    
    <view class="answer-feed">
        <block wx:for="{{answers}}" wx:key="id" wx:for-item="answer">
            <view bindtap="bindItemTap" data-aid="{{answer.id}}" class="feed-item">
                <view class="feed-source-simple">
                     <image class="avatar-small" src="{{answer.user.avatar_url}}"></image>
                     <text class="author-name">{{answer.user.nickname}}</text>
                </view>
                <view class="feed-content">
                    <view class="answer-preview-text">
                        {{answer.content}}
                    </view>
                    <view class="answer-footer-info">
                         {{answer.like_count}} 赞同 · {{answer.comment_count}} 评论 · 3 分钟前
                    </view>
                </view>
            </view>
        </block>
        
        <!-- 无回答提示 -->
        <view class="no-answer" wx:if="{{answers.length === 0 && question}}">
            <text>暂无回答，快来写一个吧~</text>
        </view>
    </view>
</view>
