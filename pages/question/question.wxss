/**question.wxss**/
.container {
    padding: 0;
    font-size: 14rpx;
    background: #f6f6f6;
    color: #000;
}

/* Question Header */
.question-header {
    background: #fff;
    padding: 30rpx 40rpx;
    margin-bottom: 20rpx;
}
.q-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #1a1a1a;
    line-height: 1.4;
    margin-bottom: 20rpx;
}
.q-media-scroll {
    margin-bottom: 20rpx;
    overflow: hidden;
    white-space: nowrap;
}
.q-desc-collapse {
    font-size: 28rpx;
    color: #444;
    line-height: 1.5;
    margin-bottom: 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.q-actions-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.q-stats {
    font-size: 24rpx;
    color: #8590a6;
}
.q-btn-write {
    background: #0066ff;
    color: #fff;
    font-size: 28rpx;
    padding: 15rpx 30rpx;
    border-radius: 30rpx; /* Pill shape */
    display: flex;
    align-items: center;
    font-weight: 500;
}

/* List Header */
.list-header {
    background: #fff;
    padding: 20rpx 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #f6f6f6;
}
.list-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #121212;
}
.list-sort {
    font-size: 24rpx;
    color: #8590a6;
}

/* Answer Feed */
.answer-feed {
    background: #f6f6f6;
}
.feed-item {
    background: #fff;
    padding: 30rpx 40rpx;
    margin-bottom: 20rpx;
}
.feed-source-simple {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}
.avatar-small {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}
.author-name {
    font-size: 28rpx;
    font-weight: bold;
    color: #444;
}
.feed-content {
    
}
.answer-preview-text {
    font-size: 30rpx;
    line-height: 1.6;
    color: #121212;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    margin-bottom: 20rpx;
}
.answer-footer-info {
    font-size: 24rpx;
    color: #8590a6;
}
