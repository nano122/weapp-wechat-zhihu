.profile-header {
    background: #2A8CE5;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
}

.avatar-container {
    margin-bottom: 20rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.info-container {
    text-align: center;
}

.nickname {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.bio {
    font-size: 26rpx;
    opacity: 0.8;
}

.stats-container {
    background: white;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
}

.stat-item {
    flex: 1;
    text-align: center;
    border-right: 1px solid #eee;
}

.stat-item:last-child {
    border-right: none;
}

.stat-num {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.stat-label {
    font-size: 24rpx;
    color: #999;
    margin-top: 5rpx;
}

.section-title {
    padding: 20rpx;
    color: #666;
    font-size: 28rpx;
    background: white;
    border-bottom: 1px solid #eee;
}

.empty-feed {
    padding: 100rpx;
    text-align: center;
    color: #ccc;
    font-size: 28rpx;
}
