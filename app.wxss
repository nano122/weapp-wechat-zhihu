/**app.wxss**/
.container {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f6f6f6;
}

.flex-wrp{
  display: flex;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}

/* Common Feed Item Card Style for Index/Discovery */
.container .feed-item{
  width: 710rpx;
  padding: 30rpx 20rpx;
  margin: 15rpx auto;
  background: #ffffff;
  border-radius: 12rpx; /* Card rounded corners */
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05); /* Soft shadow */
}

/* Feed Headers (Avatar + Name) */
.container .feed-item .feed-source{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.container .feed-item .feed-source .avatar {
    margin-right: 15rpx;
}
.container .feed-item .feed-source .avatar image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  color: #444;
  font-size: 26rpx;
  font-weight: 500;
  vertical-align: middle;
}
.container .feed-item .feed-source .item-more{
  width: 40rpx;
  height: 40rpx;
  margin-left: auto; /* Push to right */
}

/* Feed Content */
.container .feed-item .feed-content{
  padding: 0;
}
.container .feed-item .feed-content .question text{
  font-size: 32rpx; /* Larger Title */
  font-weight: bold;
  line-height: 1.4;
  color: #121212;
  display: block;
  margin-bottom: 10rpx;
}
.container .feed-item .feed-content .answer-body{
  font-size: 28rpx; /* Readable body text */
  line-height: 1.6;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* Feed Footer actions */
.container .feed-item .feed-content .answer-actions{
  margin-top: 15rpx;
  color: #8590a6;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  margin-right: 20rpx;
}
